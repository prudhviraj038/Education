<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollView4"
        android:layout_weight="1"
        android:fillViewport="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:divider="@drawable/answer_divider"
                android:showDividers="end"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/user_image"
                    android:src="@drawable/building_icon" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:divider="@drawable/answer_divider"
                    android:showDividers="end"
                    android:layout_gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABDULLAH ALAAZMY"
                        android:id="@+id/username"
                        android:textSize="13dp"
                        android:layout_gravity="left"
                        android:layout_marginBottom="2dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/ans_scr_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salmiya,Hawalli"
                        android:id="@+id/user_adr"
                        android:layout_gravity="left"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"
                        android:textSize="12dp"
                        android:textColor="@color/ans_scr_text" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="04"
                    android:id="@+id/userlevel"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:background="#dedede"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="QUESTION-1"
                    android:id="@+id/question_number"
                    android:textSize="15dp"
                    android:gravity="center|center_horizontal"
                    android:background="#107fc9"
                    android:textColor="#ffffff"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry&apos;s standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem."
                    android:id="@+id/question"
                    android:textSize="12dp"
                    android:textColor="#8c99a9"
                    android:background="#ffffff"
                    android:padding="10dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textSize="16sp"
                android:textColor="#616161"
                android:layout_gravity="center"
                android:password="false"
                android:text="CHOOSE YOUR ANSWER"
                android:layout_marginBottom="5dp" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ans_background"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/one"
                    android:layout_toStartOf="@+id/one">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ans1"
                        android:textColor="@color/ans_text"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry&apos;s standard dummy text ever since the 1500s,"
                        android:layout_alignParentBottom="false"
                        android:textSize="12dp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/one"
                    android:layout_gravity="center_vertical"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:checked="false"
                    android:src="@drawable/radio_btn_selected" />

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ans_background"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/two"
                    android:layout_toStartOf="@+id/two" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ans2"
                        android:textColor="@color/text_black"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry&apos;s standard dummy text ever since the 1500s,"
                        android:layout_alignParentBottom="false"
                        android:textSize="12dp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/two"
                    android:layout_gravity="center_vertical"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:checked="false"
                    android:src="@drawable/radio_btn_correct" />
            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ans_background"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/three"
                    android:layout_toStartOf="@+id/three">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ans3"
                        android:textColor="@color/text_black"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry&apos;s standard dummy text ever since the 1500s,"
                        android:layout_alignParentBottom="false"
                        android:textSize="12dp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/three"
                    android:layout_gravity="center_vertical"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:checked="false"
                    android:src="@drawable/radio_btn_wrong" />
            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp" >

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ans_background"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/four"
                    android:layout_toStartOf="@+id/four" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ans4"
                        android:textColor="@color/text_black"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry&apos;s standard dummy text ever since the 1500s,"
                        android:layout_alignParentBottom="false"
                        android:textSize="12dp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/four"
                    android:layout_gravity="center_vertical"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:checked="false"
                    android:src="@drawable/radio_btn_unselected" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:divider="@drawable/ans_scr_divider">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="QUESTION NO."
                        android:id="@+id/textView16"
                        android:textSize="12sp"
                        android:background="#dedede"
                        android:gravity="center"
                        android:padding="5dp"
                        android:singleLine="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="0 / 5"
                        android:id="@+id/que_count"
                        android:textSize="16sp"
                        android:background="#f15f63"
                        android:gravity="center"
                        android:padding="5dp"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="REFERENCE"
                        android:id="@+id/textView18"
                        android:textSize="12sp"
                        android:background="#dedede"
                        android:gravity="center"
                        android:padding="5dp"
                        android:singleLine="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="SCIENCE"
                        android:id="@+id/reference"
                        android:textSize="16sp"
                        android:background="#f7a161"
                        android:gravity="center"
                        android:padding="5dp"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GIVE / PASS"
                        android:id="@+id/textView20"
                        android:textSize="12sp"
                        android:background="#dedede"
                        android:gravity="center"
                        android:padding="5dp"
                        android:singleLine="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="GIVE UP"
                        android:id="@+id/give_up"
                        android:textSize="16sp"
                        android:background="#21a6e0"
                        android:gravity="center"
                        android:padding="5dp"
                        android:singleLine="true" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_black"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:id="@+id/submit_ans" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT ANSWER"
            android:id="@+id/textView6"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginRight="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView30"
            android:src="@drawable/tick_icon"
            android:layout_marginRight="5dp" />
    </LinearLayout>

</LinearLayout>